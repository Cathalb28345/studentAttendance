pipeline {
    agent any
    stages { 
    
	    stage('Fetch') {
	       git 'https://github.com/Cathalb28345/studentAttendance'
	    }
	    
        stage('Building stage') { 
            steps {
               echo 'Building Task'
               sh 'mvn clean compile'
               bat '''
		       javac -cp "D:\7. IDES\Eclipse\eclipse-workspace\StudentAttendance\\lib\\junit-4.12.jar";"D:\7. IDES\Eclipse\eclipse-workspace\StudentAttendance\\lib\\hamcrest-core-1.3.jar";. "Student.java" "studentTest.java"
		        '''        
            }
        }
        
        stage('Testing stage') { 
            steps {
               echo 'Testing Task'
                sh 'mvn test'
		  		bat '''
      			  java -cp "D:\7. IDES\Eclipse\eclipse-workspace\StudentAttendance\\lib\\junit-4.12.jar";"D:\7. IDES\Eclipse\eclipse-workspace\StudentAttendance\\lib\\hamcrest-all-1.3.jar";. org.junit.runner.JUnitCore studentTest
       			 '''
            }
        }
              
    }
    post {
		  success {
		   		echo 'Successful Creation'
		   		sh 'mvn deploy' 
		    }
		  
		  failure {
		  		echo 'Errors had occurred'
			}
		}
}

